---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contacto',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contacto" title="¡Hablemos!" />

  <ContactUs
    title="Dejanos un mensaje"
    subtitle="Si deseas contribuir a LESCO puedes hacerlo, enviando un mensaje a través de este formulario."
    inputs={[
      {
        type: 'text',
        name: 'Nombre',
        label: 'Nombre',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Mensaje',
    }}
    disclaimer={{
      label:
        'Al enviar este formulario de contacto, usted reconoce y acepta la recopilación de su información personal.',
    }}
    description="Nuestro equipo puede responder en un lapso de 24 horas."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="¡Estamos para ayudar!"
    items={[
      {
        title: 'Teléfono',
        description: '+506 7190-3969',
        icon: 'tabler:headset',
      },
      {
        title: 'Email',
        description: 'lescotranslator@gmail.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Ubicación',
        description: 'Colegio Técnico Profesional Don Bosco, Alajuelita, Costa Rica',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
